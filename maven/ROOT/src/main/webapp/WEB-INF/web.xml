<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
   <filter>
        <filter-name>DataRequestFilter</filter-name>
        <filter-class>com.medarametla.root.java.servlets.filters.DataRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DataRequestFilter</filter-name>
        <url-pattern>/uploadServlet</url-pattern>
    </filter-mapping> 
    <servlet>
        <servlet-name>MedarametlaMain</servlet-name>
        <servlet-class>com.medarametla.root.java.servlets.MedarametlaMain</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.medarametla.root.java.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayHeadlinesServlet</servlet-name>
        <servlet-class>com.medarametla.root.java.servlets.DisplayHeadlinesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedarametlaMain</servlet-name>
        <url-pattern>/MedarametlaMain</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayHeadlinesServlet</servlet-name>
        <url-pattern>/headlines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadDBServlet</servlet-name>
        <url-pattern>/uploadServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
